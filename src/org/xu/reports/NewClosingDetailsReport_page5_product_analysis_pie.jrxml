	</pageHeader>
	<columnHeader>
		<band splitType="Stretch"/>
	</columnHeader>
	<detail>
		<band splitType="Stretch"/>
	</detail>
	<columnFooter>
		<band splitType="Stretch"/>
	</columnFooter>
	<pageFooter>
		<band splitType="Stretch"/>
	</pageFooter>
	<summary>
		<band height="300" splitType="Stretch">
			<pieChart>
				<chart>
					<reportElement x="0" y="0" width="550" height="300"/>
					<chartTitle>
						<font size="8"/>
					</chartTitle>
					<chartSubtitle>
						<font size="8"/>
					</chartSubtitle>
					<chartLegend position="Bottom">
						<font size="8"/>
					</chartLegend>
				</chart>
				<pieDataset>
					<keyExpression><![CDATA[$F{product}]]></keyExpression>
					<valueExpression><![CDATA[$F{amount}]]></valueExpression>
				</pieDataset>
				<piePlot isCircular="true" labelFormat="{0}" legendLabelFormat="{0} ({2})">
					<plot>
						<seriesColor seriesOrder="0" color="#5555FF"/>
						<seriesColor seriesOrder="1" color="#FF5555"/>
					</plot>
					<itemLabel/>
				</piePlot>
			</pieChart>
		</band>
	</summary>
</jasperReport>
